<?xml version="1.0" encoding="utf-8" ?>
<View xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ZTn.Pcl.D3Calculator.Controls.BusyIndicator">
  <StackLayout x:Name="Stack" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" IsVisible="True" BackgroundColor="Black">
    <ActivityIndicator x:Name="Indicator" IsRunning="True" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" />
    <Label x:Name="Message" HorizontalOptions="Center" />
  </StackLayout>
</View>
